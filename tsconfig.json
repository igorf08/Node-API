{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "server/**/*.ts",
    "server/*.ts",
    "tests",
    "tests/unit/config/.mocharc.json",
    "tests/integration/config/.mocharc.json",
  ],
  "exclude": [
    "node_modules"
  ],
  "buildOnSave": true,
  "compileOnSave": true
}
